{
  "name": "ts-template-project",
  "version": "0.0.2",
  "license": "MIT",
  "description": "a template for typescript npm packages",
  "author": "Martin MÃ¶ller",
  "repository": "https://github.com/normartin/ts-template-project",
  "bugs": "https://github.com/normartin/ts-template-project/issues",
  "keywords": [
    "template",
    "typescript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "main": "dist/ts-template-project.js",
  "types": "dist/ts-template-project.d.ts",
  "engines": {
    "node": ">=8.9.3"
  },
  "scripts": {
    "cleanup": "del-cli dist reports .nyc_output",
    "prebuild": "npm run cleanup",
    "build": "tsc",
    "test": "mocha",
    "posttest": "npm run tslint",
    "tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "coverage": "nyc mocha",
    "validate": "npm run tslint && npm run coverage",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "chai": "^4.1.2",
    "coveralls": "^3.0.4",
    "del-cli": "^2.0.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.5.2"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "reports/coverage"
  }
}
